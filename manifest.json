{
  "manifest_version": 3,
  "name": "ChatGPT Prompt Injector",
  "version": "1.0",
  "description": "Automatically inject prompts into ChatGPT with a single click",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Prompt Injector"
  }
}