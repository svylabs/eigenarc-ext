{
  "manifest_version": 3,
  "name": "Eigenarc",
  "version": "0.3",
  "description": "Structured learning for Native AI Learners",
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://eigenarc.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Eigenarc"
  },
  "web_accessible_resources": [
    {
      "resources": ["firebase.js", "offscreen.html", "offscreen.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "tabs",
    "storage",
    "offscreen"
  ]
}