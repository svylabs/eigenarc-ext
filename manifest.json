{
  "manifest_version": 3,
  "name": "Eigenarc",
  "version": "1.1",
  "description": "Structured learning for Native AI Learners",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Eigenarc"
  }
}